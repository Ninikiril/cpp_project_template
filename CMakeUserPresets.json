{
    "version": 2,
    "configurePresets": [
        {
            "name": "default",
            "inherits": "VSC2022-x64",
            "environment": {
                "VCPKG_ROOT": "C:/Users/Name/repositories/vcpkg"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug_build",
            "displayName": "debug_build",
            "configurePreset": "default",
            "configuration": "Debug",
            "targets": [
                "app",
                "lib",
                "testlib"
            ]
        },
        {
            "name": "release_build",
            "displayName": "release_build",
            "configurePreset": "default",
            "configuration": "Release",
            "targets": [
                "app",
                "lib",
                "testlib"
            ]
        },
        {
            "name": "debinfo_build",
            "displayName": "debinfo_build",
            "configurePreset": "default",
            "configuration": "RelWithDebInfo",
            "targets": [
                "app",
                "lib",
                "testlib"
            ]
        },
        {
            "name": "minsize_build",
            "displayName": "minsize_build",
            "configurePreset": "default",
            "configuration": "MinSizeRel",
            "targets": [
                "app",
                "lib",
                "testlib"
            ]
        },
        {
            "name": "docs_build",
            "displayName": "docs_build",
            "configurePreset": "default",
            "configuration": "Release",
            "targets": [
                "docs"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "debug_test",
            "description": "",
            "displayName": "debug_test",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "release_test",
            "description": "",
            "displayName": "release_test",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "debinfo_test",
            "description": "",
            "displayName": "debinfo_test",
            "configurePreset": "default",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "minsize_test",
            "description": "",
            "displayName": "minsize_test",
            "configurePreset": "default",
            "configuration": "MinSizeRel"
        }
    ]
}